<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_date_trans"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Ngày giờ"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tv_content_trans"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Nội dung"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tv_money_trans"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Số tiền"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tv_balance_trans"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Số dư"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tv_account_trans"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Tài khoản"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tv_trans_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Loại giao dịch"
        android:gravity="center"/>

</LinearLayout>